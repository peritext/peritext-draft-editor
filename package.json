{
  "name": "scholar-draft",
  "version": "0.2.10",
  "description": "draft editor handling footnotes editing and inline/block assets connected to upstream logic",
  "main": "build/index.js",
  "scripts": {
    "autocommit-add": "git add build",
    "build": "rm -rf build && gulp build",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "lint:watch": "node_modules/eslint-watch/bin/esw --watch src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peritext/scholar-draft.git"
  },
  "keywords": [
    "draft-js"
  ],
  "author": "Robin de Mourat",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/peritext/scholar-draft/issues"
  },
  "homepage": "https://github.com/peritext/scholar-draft#readme",
  "pre-commit": [
    "lint",
    "build",
    "autocommit-add"
  ],
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime",
      "transform-export-extensions",
      "transform-class-properties",
      "transform-decorators-legacy",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "import/default": 0,
      "import/no-duplicates": 0,
      "import/named": 0,
      "import/namespace": 0,
      "import/no-unresolved": 0,
      "import/no-named-as-default": 2,
      "react/require-default-props": 0,
      "no-plusplus": 0,
      "block-scoped-var": 0,
      "padded-blocks": 0,
      "comma-dangle": 0,
      "comma-spacing": 1,
      "no-console": 0,
      "no-multiple-empty-lines": 1,
      "no-undef": 1,
      "no-loop-func": 0,
      "no-debugger": 0,
      "prefer-const": 1,
      "no-alert": 1,
      "func-names": 0,
      "no-multi-spaces": 1,
      "no-cond-assign": 0,
      "no-set-state": 0,
      "no-trailing-spaces": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/jsx-filename-extension": 0,
      "consistent-return": 0,
      "indent": [
        2,
        2
      ],
      "new-cap": 0,
      "react/forbid-prop-types": 0,
      "no-unused-vars": [
        1,
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "id-length": [
        2,
        {
          "exceptions": [
            "_"
          ]
        }
      ]
    },
    "plugins": [
      "import"
    ]
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.24.1",
    "better-error": "0.0.2",
    "chai": "^3.5.0",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-watch": "^3.1.0",
    "file-loader": "^0.11.1",
    "file-saver": "^1.3.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-strip-comments": "^2.4.5",
    "image-webpack-loader": "^3.3.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.3",
    "storybook": "0.0.0",
    "style-loader": "^0.17.0",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "async": "^2.4.0",
    "chai-enzyme": "^0.7.1",
    "draft-js": "^0.10.1",
    "draft-js-checkable-list-item": "^2.0.5",
    "draft-js-multidecorators": "git+https://github.com/echenley/draft-js-multidecorators.git",
    "draft-js-simpledecorator": "^1.0.2",
    "draftjs-utils": "^0.7.5",
    "fbjs": "^0.8.12",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.8",
    "react": "^15.6.1",
    "react-custom-scrollbars": "^4.1.0",
    "react-dom": "^15.6.1",
    "react-tooltip": "^3.3.0",
    "rebound": "0.0.15",
    "uuid": "^3.0.1"
  }
}
